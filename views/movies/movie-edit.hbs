<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Edit Movie</h2>
            <form action="/movies/{{movie.id}}/edit" method="POST">
                <label>Title</label>
                <input type="text" name="title" value="{{movie.title}}"/>
                <label>Genre</label>
                <input type="text" name="genre" value="{{movie.genre}}"/>
                <label>Plot</label>
                <input type="text" name="plot" value="{{movie.plot}}"/>
                <label>Cast</label>
                <select name="cast" multiple>
                    {{#each celebrities}}
                        <option value="{{id}}">{{name}}</option>
                    {{/each}}
                </select>
                <button type="submit">Update</button>
            </form>            
        </div>
    </div>
</div>