<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Create Movie</h2>
            <form action="/create-movie" method="POST">
                <label>Title</label>
                <input type="text" name="title"/>
                <label>Genre</label>
                <input type="text" name="genre"/>
                <label>Plot</label>
                <input type="text" name="plot"/>
                <label>Cast</label>
                <select name="cast" multiple>
                    {{#each celebrities}}
                        <option value="{{id}}">{{name}}</option>
                    {{/each}}
                </select>
                <button type="submit">Create</button>
            </form>            
        </div>
    </div>
</div>
