<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Edit Celebrity</h2>
            <form action="/celebrities/{{id}}/edit" method="POST">
                <label>Name</label>
                <input type="text" name="name" value="{{name}}"/>
                <label>Occupation</label>
                <input type="text" name="occupation" value="{{occupation}}"/>
                <label>Catch Phrase</label>
                <input type="text" name="catchPhrase" value="{{catchPhrase}}"/>
                <button type="submit">Update</button>
            </form>
        </div>
    </div>
</div>

